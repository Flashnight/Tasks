@model ClassLibrary.Core.Models.StudentTask
@{
    ViewBag.Title = ViewBag.Task;
}
<div class="row col-md-offset-3 col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>@ViewBag.Task.Title</h3>
        </div>
        <div class="panel-body">
            @ViewBag.Task.Description
        </div>
        <div class="panel-body">
            @{
                ViewBag.Title = "Upload";
            }
        </div>
        <div class="panel-footer">
            <h4>Отправить решение</h4>
            @using (Html.BeginForm("UploadSolution", "MyTasks", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="file" name="upload" /><br>
                <input type="submit" value="Загрузить" class="btn btn-primary" />
            }
        </div>
    </div>
</div>


















